<configuration>
	<appSettings>
		<!--add key="CONSTR" value="user id=sa;database=Shopping;data source=Venkat;password=sas;integrated security=SSPI;Persist Security Info=True"/-->
		<add key="CONSTR" value="Data Source=COMPAQ-PC\SQLEXPRESS;Initial Catalog=ShoppingCartDB;Integrated Security=True"/>
		<add key="ReferToFriendSubject" value="Visit this page once"/>
		<add key="ReferToFriendBody" value="Dear {0}, This link has been sent to you by your friend {1}. He wanted you to visit this page once. Regards - Site Admin."/>
		<add key="SendPwd" value="Your Password is "/>
		<add key="Subject" value="Your Password"/>
		<add key="From" value="admin@ShoppingCart.com"/>
	</appSettings>
	<connectionStrings>
		<!--add name="EasyWearConnectionString" connectionString="user id=sa;database=Shopping;data source=Venkat;password=sas;integrated security=SSPI;Persist Security Info=True" providerName="System.Data.SqlClient"/-->
		<add name="EasyWearConnectionString" connectionString="Data Source=COMPAQ-PC\SQLEXPRESS;Initial Catalog=ShoppingCartDB;Integrated Security=True" providerName="System.Data.SqlClient"/>
	</connectionStrings>
	<system.web>
		<!-- 
            Set compilation debug="true" to insert debugging 
            symbols into the compiled page. Because this 
            affects performance, set this value to true only 
            during development.
        -->
		<compilation debug="true" targetFramework="4.0">
			<assemblies>
				<add assembly="System.Design, Version=4.0.0.0, Culture=neutral, PublicKeyToken=B03F5F7F11D50A3A"/></assemblies></compilation>
		<!--
            The <authentication> section enables configuration 
            of the security authentication mode used by 
            ASP.NET to identify an incoming user. 
        -->
		<authentication mode="Forms">
		</authentication>
		<authorization>
			<allow users="*"/>
		</authorization>
		<!--
            The <customErrors> section enables configuration 
            of what to do if/when an unhandled error occurs 
            during the execution of a request. Specifically, 
            it enables developers to configure html error pages 
            to be displayed in place of a error stack trace.

        <customErrors mode="RemoteOnly" defaultRedirect="GenericErrorPage.htm">
            <error statusCode="403" redirect="NoAccess.htm" />
            <error statusCode="404" redirect="FileNotFound.htm" />
        </customErrors>
        -->
		<pages controlRenderingCompatibilityVersion="3.5" clientIDMode="AutoID"/></system.web>
</configuration>
